@page "{id:int}"
@model FurnitureProduction.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Подробности";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4 mt-5">
                <h2 class="text-center mb-4" style="color: #3e2c1f;">@ViewData["Title"]</h2>

                <h4 class="mb-3">Работник</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">Имя</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.FullName)</dd>
                    <dt class="col-sm-3">Должность</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Position)</dd>
                    <dt class="col-sm-3">Отдел</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Department)</dd>
                    <dt class="col-sm-3">Зарплата</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Salary) BYN</dd>
                    <dt class="col-sm-3">Дата приема</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.HireDate)</dd>
                </dl>

                <div class="mt-4 text-center">
                    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary me-2">Редактировать</a>
                    <a asp-page="./Index" class="btn btn-secondary">Вернуться к списку</a>
                </div>
            </div>
        </div>
    </div>
</div>