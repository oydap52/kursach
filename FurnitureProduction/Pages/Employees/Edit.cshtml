@page "{id:int}"
@model FurnitureProduction.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Редактирование";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4 mt-5">
                <h2 class="text-center mb-4" style="color: #3e2c1f;">@ViewData["Title"]</h2>

                <h4 class="mb-3">Работник</h4>
                <hr />

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Employee.Id" />
                    <div class="form-group mb-3">
                        <label asp-for="Employee.FullName" class="control-label"></label>
                        <input asp-for="Employee.FullName" class="form-control" />
                        <span asp-validation-for="Employee.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Employee.Position" class="control-label"></label>
                        <input asp-for="Employee.Position" class="form-control" />
                        <span asp-validation-for="Employee.Position" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Employee.Department" class="control-label"></label>
                        <input asp-for="Employee.Department" class="form-control" />
                        <span asp-validation-for="Employee.Department" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Employee.Salary" class="control-label"></label>
                        <input asp-for="Employee.Salary" class="form-control" />
                        <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Employee.HireDate" class="control-label"></label>
                        <input asp-for="Employee.HireDate" class="form-control" type="date" />
                        <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Сохранить" class="btn btn-success" />
                        <a asp-page="./Index" class="btn btn-secondary ms-2">Вернуться к списку</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}