@page
@model FurnitureProduction.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Список работников";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Расширили до col-md-10 для гармонии с кнопками -->
            <div class="card shadow-sm p-4 mt-5">
                <h2 class="text-center mb-4" style="color: #3e2c1f;">@ViewData["Title"]</h2>

                <p class="text-center mb-4">
                    <a asp-page="Create" class="btn btn-primary">Создать нового</a>
                </p>

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th style="font-weight: bold; color: #000;">Имя</th>
                                <th style="font-weight: bold; color: #000;">Должность</th>
                                <th style="font-weight: bold; color: #000;">Отдел</th>
                                <th style="font-weight: bold; color: #000;">Зарплата (BYN)</th>
                                <th style="font-weight: bold; color: #000;">Дата приема</th>
                                <th style="font-weight: bold; color: #000;">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Employee)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Position)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Department)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Salary) BYN</td>
                                    <td>@Html.DisplayFor(modelItem => item.HireDate)</td>
                                    <td>
                                        <div class="btn-group" role="group" style="gap: 0.5rem;">
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-custom-edit">Редактировать</a>
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-custom-details">Подробности</a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-custom-delete">Удалить</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Кастомные стили для кнопок */
    .btn-custom-edit {
        background-color: #d4af37; /* Тёмно-зелёный */
        border: none;
        border-radius: 0.25rem;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem; /* Единый размер шрифта */
        transition: background-color 0.3s ease;
    }

        .btn-custom-edit:hover {
            background-color: #3a5a3a; /* Более тёмный оттенок при наведении */
        }

    .btn-custom-details {
        background-color: #6a8fa1; /* Серо-голубой */
        color: white;
        border: none;
        border-radius: 0.25rem;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
        transition: background-color 0.3s ease;
    }

        .btn-custom-details:hover {
            background-color: #5a7f91; /* Более тёмный оттенок при наведении */
        }

    .btn-custom-delete {
        background-color: #dc3545; /* Тёмно-красный */
        color: white;
        border: none;
        border-radius: 0.25rem;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
        transition: background-color 0.3s ease;
    }

        .btn-custom-delete:hover {
            background-color: #7a3a3a; /* Более тёмный оттенок при наведении */
        }

    /* Убедимся, что кнопки не перекрывают друг друга */
    .btn-group .btn {
        margin: 0;
    }
</style>