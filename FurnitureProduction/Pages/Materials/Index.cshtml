@page
@model FurnitureProduction.Pages.Materials.IndexModel
@{
    ViewData["Title"] = "Список материалов";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm p-4 mt-5">
                <h2 class="text-center mb-4" style="color: #3e2c1f;">@ViewData["Title"]</h2>

                <p class="text-center mb-4">
                    <a asp-page="Create" class="btn btn-primary">Создать новый</a>
                </p>

                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th style="font-weight: bold; color: #000;">Название</th>
                            <th style="font-weight: bold; color: #000;">Тип</th>
                            <th style="font-weight: bold; color: #000;">Количество</th>
                            <th style="font-weight: bold; color: #000;">Цена за единицу</th>
                            <th style="font-weight: bold; color: #000;">Поставщик</th>
                            <th style="font-weight: bold; color: #000;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Material)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                                <td>@Html.DisplayFor(modelItem => item.Supplier)</td>
                                <td>
                                    <div class="btn-group" role="group" style="gap: 0.5rem;">
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-custom-edit">Редактировать</a>
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-custom-details">Подробности</a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-custom-delete">Удалить</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
<style>
    /* Кастомные стили для кнопок */
    .btn-custom-edit {
        background-color: #d4af37;
        border: none;
        border-radius: 0.25rem;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
        transition: background-color 0.3s ease;
    }
    .btn-custom-edit:hover {
        background-color: #3a5a3a;
    }

    .btn-custom-details {
        background-color: #6a8fa1;
        color: white;
        border: none;
        border-radius: 0.25rem;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
        transition: background-color 0.3s ease;
    }
    .btn-custom-details:hover {
        background-color: #5a7f91;
    }

    .btn-custom-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 0.25rem;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
        transition: background-color 0.3s ease;
    }
    .btn-custom-delete:hover {
        background-color: #7a3a3a;
    }

    .btn-group .btn {
        margin: 0;
    }
</style>