@page "{id:int}"
@model FurnitureProduction.Pages.Materials.DetailsModel
@{
    ViewData["Title"] = "Подробности";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4 mt-5">
                <h2 class="text-center mb-4" style="color: #3e2c1f;">@ViewData["Title"]</h2>

                <h4 class="mb-3">Материал</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">Название</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Material.Name)</dd>
                    <dt class="col-sm-3">Тип</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Material.Type)</dd>
                    <dt class="col-sm-3">Количество</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Material.Quantity)</dd>
                    <dt class="col-sm-3">Цена за единицу</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Material.UnitPrice)</dd>
                    <dt class="col-sm-3">Поставщик</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Material.Supplier)</dd>
                </dl>

                <div class="mt-4 text-center">
                    <a asp-page="./Edit" asp-route-id="@Model.Material.Id" class="btn btn-primary me-2">Редактировать</a>
                    <a asp-page="/Warehouse/Index" class="btn btn-secondary">Вернуться к списку</a>
                </div>
            </div>
        </div>
    </div>
</div>