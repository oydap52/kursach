@page
@model FurnitureProduction.Pages.Identity.Account.LogoutModel
@{
    ViewData["Title"] = "Выход из аккаунта";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg p-4 border-0" style="border-radius: 15px;">
                <div class="text-center mb-4">
                    <p class="lead">Вы уверены, что хотите выйти из аккаунта <strong>@User.Identity.Name</strong>?</p>
                </div>
                <form method="post">
                    <input type="hidden" name="returnUrl" value="@(Model.PageContext.HttpContext.Request.Query["returnUrl"])" />
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-danger btn-lg" style="border-radius: 10px;">
                            Да, выйти
                        </button>
                        <button type="submit" asp-page-handler="Stay" class="btn btn-outline-secondary btn-lg" style="border-radius: 10px;">
                            Нет, остаться
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>