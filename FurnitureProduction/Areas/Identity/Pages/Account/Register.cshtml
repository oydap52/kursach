@page
@model FurnitureProduction.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" novalidate>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="form-label">Электронная почта</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Введите email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.FullName" class="form-label">ФИО</label>
                    <input asp-for="Input.FullName" class="form-control" placeholder="Введите ФИО" required />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.PassportData" class="form-label">Паспортные данные</label>
                    <input asp-for="Input.PassportData" class="form-control" placeholder="Напр. MP1234567" required />
                    <span asp-validation-for="Input.PassportData" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Введите пароль" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Подтвердите пароль</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Подтвердите пароль" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
            </form>
            <div class="mt-3 text-center">
                <p>
                    Уже есть аккаунт? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Войти</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}