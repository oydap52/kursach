@page
@model FurnitureProduction.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Вход";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <section>
                <form method="post" novalidate>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.Email" class="form-label">Электронная почта</label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Введите email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.Password" class="form-label">Пароль</label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Введите пароль" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 form-check">
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            <input asp-for="Input.RememberMe" class="form-check-input" /> @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Войти</button>
                    <div class="mt-3 text-center">
                        <p>
                            Нет аккаунта? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
                        </p>
                        <p>
                            <a asp-page="./ForgotPassword">Забыли пароль?</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}